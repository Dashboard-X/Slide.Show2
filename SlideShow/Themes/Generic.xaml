<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:v="clr-namespace:Vertigo.SlideShow.Controls;assembly=Vertigo.SlideShow">

	<!-- NoFocusHyperlinkButtonStyle -->
	<Style x:Key="NoFocusHyperlinkButtonStyle" TargetType="HyperlinkButton">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="HyperlinkButton">
					<Grid Cursor="{TemplateBinding Cursor}" Background="{TemplateBinding Background}">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal"/>
								<VisualState x:Name="MouseOver">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="UnderlineTextBlock" Storyboard.TargetProperty="Visibility" Duration="0">
											<DiscreteObjectKeyFrame KeyTime="0">
												<DiscreteObjectKeyFrame.Value>
													<Visibility>Visible</Visibility>
												</DiscreteObjectKeyFrame.Value>
											</DiscreteObjectKeyFrame>
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="UnderlineTextBlock" Storyboard.TargetProperty="Visibility" Duration="0">
											<DiscreteObjectKeyFrame KeyTime="0">
												<DiscreteObjectKeyFrame.Value>
													<Visibility>Visible</Visibility>
												</DiscreteObjectKeyFrame.Value>
											</DiscreteObjectKeyFrame>
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Disabled">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="DisabledOverlay" Storyboard.TargetProperty="Visibility" Duration="0">
											<DiscreteObjectKeyFrame KeyTime="0">
												<DiscreteObjectKeyFrame.Value>
													<Visibility>Visible</Visibility>
												</DiscreteObjectKeyFrame.Value>
											</DiscreteObjectKeyFrame>
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
						<TextBlock x:Name="NormalTextBlock"
							Text="{TemplateBinding Content}"
							HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
							VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
							Margin="{TemplateBinding Padding}" />
						<TextBlock x:Name="UnderlineTextBlock"
							Text="{TemplateBinding Content}"
							HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
							VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
							Margin="{TemplateBinding Padding}"
							TextDecorations="Underline"
							Visibility="Collapsed" />
						<TextBlock x:Name="DisabledOverlay"
							Canvas.ZIndex="1"	
							Text="{TemplateBinding Content}"
							Foreground="#FFA5A5A5"
							HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
							VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
							Margin="{TemplateBinding Padding}"
							Visibility="Collapsed" />
						<ContentPresenter x:Name="contentPresenter"
							Content="{TemplateBinding Content}"
							ContentTemplate="{TemplateBinding ContentTemplate}"
							VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
							HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
							Margin="{TemplateBinding Padding}" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
	<!-- Default style for Vertigo.SlideShow.Controls.SlideDescription -->
	<Style TargetType="v:SlideDescription">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="v:SlideDescription">
					<Canvas>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualStateGroup.Transitions>
									<VisualTransition To="Show" />
									<VisualTransition To="Hide" />
								</VisualStateGroup.Transitions>
								<VisualState x:Name="Show">
									<Storyboard>
										<DoubleAnimationUsingKeyFrames 
											Storyboard.TargetName="RootElement" 
											Storyboard.TargetProperty="(Canvas.Top)">
											<SplineDoubleKeyFrame
												Value="-60"
												KeySpline="0,0 0,0" 
												KeyTime="0:0:0" />
											<SplineDoubleKeyFrame 
												Value="0"
												KeySpline="0,0 0,1"
												KeyTime="0:0:0.4" />
										</DoubleAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Hide">
									<Storyboard>
										<DoubleAnimationUsingKeyFrames 
											Storyboard.TargetName="RootElement" 
											Storyboard.TargetProperty="(Canvas.Top)">
											<SplineDoubleKeyFrame
												Value="0"
												KeySpline="0,0 0,0" 
												KeyTime="0:0:0" />
											<SplineDoubleKeyFrame 
												Value="-60"
												KeySpline="0,0 0,1"
												KeyTime="0:0:0.4" />
										</DoubleAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
						<Grid x:Name="RootElement" 
							Width="{TemplateBinding Width}" 
							Height="{TemplateBinding Height}">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="{TemplateBinding TitleHeight}" />
								<RowDefinition Height="{TemplateBinding DescriptionHeight}" />
							</Grid.RowDefinitions>
							<Rectangle x:Name="BackgroundElement"
								Fill="{TemplateBinding Background}"
								Opacity="{TemplateBinding BackgroundOpacity}"
								Grid.RowSpan="2"
								Grid.ColumnSpan="2"
								RadiusX="{TemplateBinding BackgroundRadiusX}"
								RadiusY="{TemplateBinding BackgroundRadiusY}"
								Margin="{TemplateBinding BackgroundMargin}" />
							<Rectangle x:Name="TitleBackgroundElement"
								Fill="{TemplateBinding TitleBackgroundBrush}"
								Opacity="{TemplateBinding TitleBackgroundOpacity}"
								Grid.Row="0"
								Grid.ColumnSpan="2" />
							<v:PathButton x:Name="CloseButtonElement"
								Grid.Row="0"
								Grid.Column="1"
								Canvas.ZIndex="0"
								Width="{TemplateBinding CloseButtonWidth}"
								Height="{TemplateBinding CloseButtonHeight}"
								PathWidth="{TemplateBinding CloseButtonPathWidth}" 
								PathHeight="{TemplateBinding CloseButtonPathHeight}" 
								Margin="{TemplateBinding CloseButtonMargin}"
								Foreground="{TemplateBinding CloseButtonForegroundBrush}" 
								ForegroundHover="{TemplateBinding CloseButtonForegroundHoverBrush}" 
								Background1="{TemplateBinding CloseButtonBackground1Brush}"
								Background2="{TemplateBinding CloseButtonBackground2Brush}"
								RadiusX="{TemplateBinding CloseButtonRadiusX}"
								RadiusY="{TemplateBinding CloseButtonRadiusY}"
								Data="{TemplateBinding CloseButtonPathData}"
								HorizontalAlignment="Right" />
							<TextBlock x:Name="TitleElement"
								TextWrapping="NoWrap"
								Grid.Row="0"
								Grid.Column="0"
								Margin="{TemplateBinding TitleMargin}"
								Foreground="{TemplateBinding TitleForegroundBrush}"
								FontFamily="{TemplateBinding TitleFontFamily}"
								FontSize="{TemplateBinding TitleFontSize}"
								FontWeight="Bold"
								FontStretch="Normal" />
							<Rectangle x:Name="DescriptionBackgroundElement"
								Fill="{TemplateBinding DescriptionBackgroundBrush}"
								Opacity="{TemplateBinding DescriptionBackgroundOpacity}"
								Grid.Row="1"
								Grid.ColumnSpan="2"
								Margin="0" />
							<TextBlock x:Name="DescriptionElement"
								TextWrapping="NoWrap"
								Grid.Row="1"
								Grid.ColumnSpan="2"
								Margin="{TemplateBinding DescriptionMargin}"
								Foreground="{TemplateBinding DescriptionForegroundBrush}"
								FontFamily="{TemplateBinding DescriptionFontFamily}"
								FontSize="{TemplateBinding DescriptionFontSize}"
								FontWeight="Normal"
								FontStretch="Normal" />
						</Grid>
					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Default style for Vertigo.SlideShow.Controls.NavigationTray -->
	<Style TargetType="v:NavigationTray">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="v:NavigationTray">
					<Canvas>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualStateGroup.Transitions>
									<VisualTransition To="Show" GeneratedDuration="0:0:0.3" />
									<VisualTransition To="Hide" GeneratedDuration="0:0:0.6" />
								</VisualStateGroup.Transitions>
								<VisualState x:Name="Show">
									<Storyboard>
										<DoubleAnimation 
											Storyboard.TargetName="RootElement"
											Storyboard.TargetProperty="Opacity"
											To="1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Hide">
									<Storyboard>
										<DoubleAnimation 
											Storyboard.TargetName="RootElement"
											Storyboard.TargetProperty="Opacity"
											To="0" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
						<Grid x:Name="RootElement" 
							Height="{TemplateBinding Height}" 
							Width="{TemplateBinding Width}">
							<Grid.Resources>
								<Storyboard x:Name="AlbumViewTranslationStoryboardElement">
									<DoubleAnimationUsingKeyFrames 
											Storyboard.TargetName="RootElement" 
											Storyboard.TargetProperty="(Canvas.Top)">
										<SplineDoubleKeyFrame x:Name="AlbumViewTranslationKeyFrameElement"									
											KeySpline="0,0 0,0" 
											KeyTime="0:0:0" />
										<SplineDoubleKeyFrame 
											Value="0"
											KeySpline="0,0 0,1"
											KeyTime="0:0:0.6" />
									</DoubleAnimationUsingKeyFrames>
								</Storyboard>
								<Storyboard x:Name="AlbumViewOutTranslationStoryboardElement">
									<DoubleAnimationUsingKeyFrames 
											Storyboard.TargetName="RootElement" 
											Storyboard.TargetProperty="(Canvas.Top)">
										<SplineDoubleKeyFrame										
											Value="0"
											KeySpline="0,0 0,0" 
											KeyTime="0:0:0" />
										<SplineDoubleKeyFrame x:Name="AlbumViewOutTranslationKeyFrameElement"
											KeySpline="0,0 0,1"
											KeyTime="0:0:0.6" />
									</DoubleAnimationUsingKeyFrames>
								</Storyboard>
							</Grid.Resources>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>
							<Rectangle x:Name="BackgroundElement" 
								Opacity="{TemplateBinding BackgroundOpacity}" 
								Stretch="Fill" 
								Grid.ColumnSpan="3" 
								Grid.Column="0" 
								Grid.Row="0"
								Fill="{TemplateBinding Background}" />
							<v:SlideNavigation x:Name="SlideNavigationElement"
								Grid.Column="0" 
								Grid.Row="0" 
								HorizontalAlignment="Center" 
								VerticalAlignment="Center" />
							<StackPanel
								Orientation="Horizontal"
								Grid.Column="2" 
								Grid.Row="0" 
								HorizontalAlignment="Center" 
								VerticalAlignment="Center">
								<v:PathButton x:Name="EmbedButtonElement" 
									Background1="{TemplateBinding EmbedButtonBackground1Brush}"
									Background2="{TemplateBinding EmbedButtonBackground2Brush}"
									RadiusX="{TemplateBinding EmbedButtonRadiusX}"
									RadiusY="{TemplateBinding EmbedButtonRadiusY}"
									Width="{TemplateBinding EmbedButtonWidth}" 
									Height="{TemplateBinding EmbedButtonHeight}" 
									PathWidth="{TemplateBinding EmbedButtonPathWidth}" 
									PathHeight="{TemplateBinding EmbedButtonPathHeight}" 
									Foreground="{TemplateBinding EmbedButtonForegroundBrush}" 
									ForegroundHover="{TemplateBinding EmbedButtonForegroundHoverBrush}" 
									Margin="{TemplateBinding EmbedButtonMargin}"
									Visibility="{TemplateBinding EmbedViewButtonVisibility}"
									Data="{TemplateBinding EmbedButtonPathData}" />
                                <HyperlinkButton x:Name="SaveHyperlinkButtonElement" Padding="0" Margin="0">
                                    <v:PathButton x:Name="SaveButtonElement"
                                    IsEnabled="false"
									RadiusX="{TemplateBinding SaveButtonRadiusX}"
									RadiusY="{TemplateBinding SaveButtonRadiusY}"
									Background1="{TemplateBinding SaveButtonBackground1Brush}"
									Background2="{TemplateBinding SaveButtonBackground2Brush}"
									Width="{TemplateBinding SaveButtonWidth}" 
									Height="{TemplateBinding SaveButtonHeight}" 
									PathWidth="{TemplateBinding SaveButtonPathWidth}" 
									PathHeight="{TemplateBinding SaveButtonPathHeight}" 
									Foreground="{TemplateBinding SaveButtonForegroundBrush}" 
									ForegroundHover="{TemplateBinding SaveButtonForegroundHoverBrush}" 
									Visibility="{TemplateBinding SaveButtonVisibility}"
									Margin="{TemplateBinding SaveButtonMargin}"
									Data="{TemplateBinding SaveButtonPathData}" />
                                </HyperlinkButton>
                                <v:PathButton x:Name="AlbumButtonElement" 
									Background1="{TemplateBinding AlbumButtonBackground1Brush}"
									Background2="{TemplateBinding AlbumButtonBackground2Brush}"
									RadiusX="{TemplateBinding AlbumButtonRadiusX}"
									RadiusY="{TemplateBinding AlbumButtonRadiusY}"
									Width="{TemplateBinding AlbumButtonWidth}" 
									Height="{TemplateBinding AlbumButtonHeight}" 
									PathWidth="{TemplateBinding AlbumButtonPathWidth}" 
									PathHeight="{TemplateBinding AlbumButtonPathHeight}" 
									Foreground="{TemplateBinding AlbumButtonForegroundBrush}" 
									ForegroundHover="{TemplateBinding AlbumButtonForegroundHoverBrush}" 
									Margin="{TemplateBinding AlbumButtonMargin}"
									Visibility="{TemplateBinding AlbumViewButtonVisibility}"
									Data="{TemplateBinding AlbumButtonPathData}" />
								<v:PathButton x:Name="GoToFullScreenButtonElement" 
									RadiusX="{TemplateBinding FullScreenButtonRadiusX}"
									RadiusY="{TemplateBinding FullScreenButtonRadiusY}"
									Background1="{TemplateBinding FullScreenButtonBackground1Brush}"
									Background2="{TemplateBinding FullScreenButtonBackground2Brush}"
									Width="{TemplateBinding FullScreenButtonWidth}" 
									Height="{TemplateBinding FullScreenButtonHeight}" 
									PathWidth="{TemplateBinding FullScreenButtonPathWidth}" 
									PathHeight="{TemplateBinding FullScreenButtonPathHeight}" 
									Foreground="{TemplateBinding FullScreenButtonForegroundBrush}" 
									ForegroundHover="{TemplateBinding FullScreenButtonForegroundHoverBrush}" 
									Visibility="{TemplateBinding GoToFullScreenButtonVisibility}"
									Margin="{TemplateBinding FullScreenButtonMargin}"
									Data="{TemplateBinding GoToFullScreenButtonPathData}" />
								<v:PathButton x:Name="EscapeFullScreenButtonElement" 
									RadiusX="{TemplateBinding FullScreenButtonRadiusX}"
									RadiusY="{TemplateBinding FullScreenButtonRadiusY}"
									Background1="{TemplateBinding FullScreenButtonBackground1Brush}"
									Background2="{TemplateBinding FullScreenButtonBackground2Brush}"
									Width="{TemplateBinding FullScreenButtonWidth}" 
									Height="{TemplateBinding FullScreenButtonHeight}" 
									PathWidth="{TemplateBinding FullScreenButtonPathWidth}" 
									PathHeight="{TemplateBinding FullScreenButtonPathHeight}" 
									Foreground="{TemplateBinding FullScreenButtonForegroundBrush}" 
									ForegroundHover="{TemplateBinding FullScreenButtonForegroundHoverBrush}" 
									Visibility="{TemplateBinding EscapeFullScreenButtonVisibility}"
									Margin="{TemplateBinding FullScreenButtonMargin}"
									Data="{TemplateBinding EscapeFullScreenButtonPathData}" />
							</StackPanel>
							<Canvas x:Name="ThumbnailViewerRootElement" 
								Width="{TemplateBinding ThumbnailViewerWidth}" 
								Height="{TemplateBinding TrayHeight}" 
								Grid.Column="1" 
								Grid.Row="0" 
								HorizontalAlignment="Left" />
							<v:AlbumViewer x:Name="AlbumViewerElement" 
								Grid.Column="0" 
								Grid.Row="1" 
								Grid.ColumnSpan="3" 
								HorizontalAlignment="Stretch" 
								VerticalAlignment="Stretch" />
						</Grid>
					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Default style for Vertigo.SlideShow.Controls.AlbumViewer -->
	<Style TargetType="v:AlbumViewer">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="v:AlbumViewer">
					<Grid x:Name="RootElement" 
						Width="{TemplateBinding Width}" 
						Height="{TemplateBinding Height}">
						<Grid.RowDefinitions>
							<RowDefinition Height="*" />
							<RowDefinition Height="20" />
						</Grid.RowDefinitions>
						<Canvas x:Name="PageContainerCanvasElement"
							Grid.Row="0"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch" />
						<StackPanel 
							Orientation="Horizontal" 
							Grid.Row="1" 
							HorizontalAlignment="Center">
							<v:PathButton x:Name="ScrollLeftPathButtonElement" 
								Height="{TemplateBinding ScrollPathButtonHeight}" 
								PathWidth="{TemplateBinding ScrollPathButtonWidth}" 
								PathHeight="{TemplateBinding ScrollPathButtonHeight}" 
								Foreground="{TemplateBinding ScrollPathButtonForegroundBrush}" 
								ForegroundHover="{TemplateBinding ScrollPathButtonForegroundHoverBrush}"
								Margin="{TemplateBinding ScrollButtonMargin}" 
								Data="{TemplateBinding LeftScrollPathButtonData}" />
							<TextBlock x:Name="PageNumberTextBlockElement"
								FontSize="{TemplateBinding PageNumberFontSize}"
								Foreground="{TemplateBinding PageNumberForeground}"
								FontFamily="{TemplateBinding PageNumberFontFamily}" />
							<v:PathButton x:Name="ScrollRightPathButtonElement"
								Height="{TemplateBinding ScrollPathButtonHeight}" 
								PathWidth="{TemplateBinding ScrollPathButtonWidth}" 
								PathHeight="{TemplateBinding ScrollPathButtonHeight}" 
								Foreground="{TemplateBinding ScrollPathButtonForegroundBrush}"
								ForegroundHover="{TemplateBinding ScrollPathButtonForegroundHoverBrush}"
								Margin="{TemplateBinding ScrollButtonMargin}"
								Data="{TemplateBinding RightScrollPathButtonData}" />
						</StackPanel>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Default style for Vertigo.SlideShow.Controls.AlbumPage -->
	<Style TargetType="v:AlbumPage">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="v:AlbumPage" >
					<Grid x:Name="RootElement" Background="{TemplateBinding Background}">
						<Grid x:Name="AlbumButtonGridElement" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Default style for Vertigo.SlideShow.Controls.ThumbnailViewer -->
	<Style TargetType="v:ThumbnailViewer">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="v:ThumbnailViewer">
					<Canvas>
						<Grid x:Name="RootElement">
							<Grid.Resources>
								<Storyboard x:Name="GridScrollStoryboardElement">
									<DoubleAnimation x:Name="GridScrollAnimationElement" 
										Storyboard.TargetName="ThumbContainerElement" 
										Storyboard.TargetProperty="(Canvas.Left)" 
										Duration="00:00:00.5" />
								</Storyboard>
							</Grid.Resources>
							<Grid.ColumnDefinitions>
								<ColumnDefinition MinWidth="4" />
								<ColumnDefinition />
								<ColumnDefinition />
								<ColumnDefinition />
								<ColumnDefinition MinWidth="4" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition MinHeight="4" />
								<RowDefinition />
								<RowDefinition MinHeight="4" />
							</Grid.RowDefinitions>
							<Rectangle x:Name="BackgroundRectangleElement"
								Grid.Column="0"
								Grid.Row="0"
								Grid.ColumnSpan="5"
								Grid.RowSpan="3"
								Opacity="{TemplateBinding BackgroundOpacity}"
								RadiusX="{TemplateBinding BackgroundRadiusX}"
								RadiusY="{TemplateBinding BackgroundRadiusY}"
								Fill="{TemplateBinding Background}" />
							<v:RepeatPathButton x:Name="ScrollLeftRepeatPathButtonElement" 
								Grid.Column="1" 
								Grid.Row="1" 
								Width="{TemplateBinding ScrollPathButtonWidth}" 
								Height="{TemplateBinding ScrollPathButtonHeight}" 
								PathWidth="{TemplateBinding ScrollPathButtonWidth}" 
								PathHeight="{TemplateBinding ScrollPathButtonHeight}" 
								Interval="{TemplateBinding ScrollRepeatButtonInterval}" 
								Foreground="{TemplateBinding ScrollButtonBrush}" 
								ForegroundHover="{TemplateBinding ScrollButtonHoverBrush}" 
								Margin="{TemplateBinding ScrollButtonMargin}" 
								Data="{TemplateBinding LeftScrollPathButtonData}" />
							<Canvas x:Name="ThumbViewportElement" 
								Grid.Column="2" 
								Grid.Row="1" 
								Height="{TemplateBinding ThumbnailHeight}" 
								Width="{TemplateBinding ThumbnailAreaWidth}">
								<StackPanel x:Name="ThumbContainerElement" Orientation="Horizontal" />
							</Canvas>
							<v:RepeatPathButton x:Name="ScrollRightRepeatPathButtonElement" 
								Grid.Column="3" 
								Grid.Row="1" 
								Width="{TemplateBinding ScrollPathButtonWidth}" 
								Height="{TemplateBinding ScrollPathButtonHeight}" 
								PathWidth="{TemplateBinding ScrollPathButtonWidth}" 
								PathHeight="{TemplateBinding ScrollPathButtonHeight}" 
								Interval="{TemplateBinding ScrollRepeatButtonInterval}" 
								Foreground="{TemplateBinding ScrollButtonBrush}" 
								ForegroundHover="{TemplateBinding ScrollButtonHoverBrush}" 
								Margin="{TemplateBinding ScrollButtonMargin}" 
								Data="{TemplateBinding RightScrollPathButtonData}" />
						</Grid>
					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Default style for Vertigo.SlideShow.Controls.SlideThumbnail -->
	<Style TargetType="v:SlideThumbnail">
		<Setter Property="IsEnabled" Value="true" />
		<Setter Property="Cursor" Value="Hand" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="v:SlideThumbnail">
					<Canvas x:Name="RootElement">
						<v:SlidePreview x:Name="SlidePreviewElement" />
						<Border x:Name="ThumbnailImageBorderElement" 
							BorderBrush="{TemplateBinding BorderBrush}" 
							BorderThickness="{TemplateBinding BorderThickness}">
							<Image x:Name="ThumbnailImageElement" />
						</Border>
					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Default style for Vertigo.SlideShow.Controls.SlidePreview -->
	<Style TargetType="v:SlidePreview">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="v:SlidePreview">
					<Canvas x:Name="RootElement">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualStateGroup.Transitions>
									<VisualTransition To="MouseOver" />
									<VisualTransition From="MouseOver" To="Normal">
										<Storyboard />
									</VisualTransition>
								</VisualStateGroup.Transitions>
								<VisualState x:Name="Normal" />
								<VisualState x:Name="MouseOver">
									<Storyboard>
										<DoubleAnimation 
													Storyboard.TargetName="PreviewScaler"														
													Storyboard.TargetProperty="ScaleY"
													Duration="0:0:0.075"
													From="0"
													To="{TemplateBinding Height}" />
										<DoubleAnimation 
													Storyboard.TargetName="PreviewScaler"
													Storyboard.TargetProperty="ScaleX"
													Duration="0:0:0.075"
													From="0"
													To="{TemplateBinding PreviewWidth}" />
										<DoubleAnimation 
													Storyboard.TargetName="PreviewRectangleElement"
													Storyboard.TargetProperty="Opacity"
													Duration="0:0:0.075"
													From="0"
													To="1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
						<Canvas Canvas.Top="-6">
							<Grid x:Name="PreviewGridElement" Visibility="Collapsed">
								<Grid.RowDefinitions>
									<RowDefinition />
									<RowDefinition />
								</Grid.RowDefinitions>
								<Rectangle x:Name="PreviewRectangleElement" 
									Stroke="{TemplateBinding BorderBrush}" 
									StrokeThickness="{TemplateBinding BorderWidth}"
									Grid.Row="0"
									Width="{TemplateBinding PreviewWidth}"
									Height="{TemplateBinding Height}"
									RadiusX="{TemplateBinding RadiusX}"
									RadiusY="{TemplateBinding RadiusY}">
									<Rectangle.Fill>
										<ImageBrush x:Name="PreviewImageBrushElement" Stretch="UniformToFill" />
									</Rectangle.Fill>
									<Rectangle.RenderTransform>
										<ScaleTransform x:Name="PreviewScaler" CenterX="60" CenterY="120" />
									</Rectangle.RenderTransform>
								</Rectangle>
								<Polygon 
									Points="0,-1 14,-1 7,5" 
									Fill="{TemplateBinding BorderBrush}" 
									HorizontalAlignment="Center" 
									Grid.Row="1" />
							</Grid>
						</Canvas>
					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Default style for Vertigo.SlideShow.Controls.BarProgressIndicator -->
	<Style TargetType="v:BarProgressIndicator">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="v:BarProgressIndicator">
					<Canvas>
						<Grid x:Name="RootElement">
							<Canvas 
								HorizontalAlignment="Center" 
								VerticalAlignment="Center" 
								Width="{TemplateBinding Width}">
								<Rectangle x:Name="BackgroundBarElement"
									Fill="{TemplateBinding BackgroundBarBrush}" 
									Width="{TemplateBinding Width}" 
									Height="{TemplateBinding Height}" />
								<Rectangle x:Name="LoadingBarElement"
									Fill="{TemplateBinding LoadingBarBrush}" 
									Width="0" 
									Height="{TemplateBinding Height}" 
									HorizontalAlignment="Left" />
							</Canvas>
						</Grid>
					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Default style for Vertigo.SlideShow.Controls.CircleProgressIndicator -->
	<Style TargetType="v:CircleProgressIndicator">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="v:CircleProgressIndicator">
					<Canvas>
						<Grid x:Name="RootElement">
							<Canvas x:Name="CanvasElement"
								HorizontalAlignment="Center" 
								VerticalAlignment="Center" 
