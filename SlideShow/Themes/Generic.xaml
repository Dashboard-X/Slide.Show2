							Height="{TemplateBinding PathWidth}"
							Width="{TemplateBinding PathHeight}"
							Fill="{TemplateBinding Foreground}" />
						<Path x:Name="PathHoverElement" 
							Stretch="Fill"
							Height="{TemplateBinding PathWidth}"
							Width="{TemplateBinding PathHeight}"
							Fill="{TemplateBinding ForegroundHover}"
							Opacity="0" />
