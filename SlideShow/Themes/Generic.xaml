							RadiusX="{TemplateBinding RadiusX}"
							RadiusY="{TemplateBinding RadiusY}"
							Width="{TemplateBinding Width}"
							Height="{TemplateBinding Height}"
							Fill="{TemplateBinding Background2}" />
						<Rectangle x:Name="BackgroundElement2"
							RadiusX="{TemplateBinding RadiusX}"
							RadiusY="{TemplateBinding RadiusY}"
							Width="{TemplateBinding Width}"
							Height="{TemplateBinding Height}"
